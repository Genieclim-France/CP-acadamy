<style>
  .timeline-item {
    position: relative;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .timeline-item.appear {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-dot {
    position: relative;
    left: 0.7rem;
    transform: translateX(-50%);
  }

  .timeline-line {
    height: 0;
    transition: height 1.5s ease;
  }

  .timeline-line.animate {
    height: 100%;
  }
</style>

<script>
  // Fonction pour observer quand les éléments entrent dans la vue
  document.addEventListener('DOMContentLoaded', () => {
    const timelineLine = document.querySelector('.timeline-line');
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    // Observer pour la ligne
    const lineObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && timelineLine) {
          timelineLine.classList.add('animate');
        }
      });
    }, { threshold: 0.1 });
    
    // Observer pour les items
    const itemObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Ajouter un délai différent pour chaque élément
          setTimeout(() => {
            entry.target.classList.add('appear');
          }, Number((entry.target as HTMLElement).dataset.delay) || 0);
        }
      });
    }, { threshold: 0.1 });
    
    // Ajouter des délais différents pour chaque élément
    timelineItems.forEach((item, index) => {
      (item as HTMLElement).dataset.delay = String(300 * (index + 1));
      itemObserver.observe(item);
    });
    
    // Observer la timeline pour démarrer l'animation de la ligne
    if (timelineLine) lineObserver.observe(timelineLine);
  });
</script>