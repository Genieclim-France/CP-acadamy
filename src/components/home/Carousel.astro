---
// Import du CSS de Swiper
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
---

<div class="carousel-container">
  <!-- Swiper pour les backgrounds avec effet fade -->
  <div class="swiper bg-swiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide bg-coiffure"></div>
      <div class="swiper-slide bg-esthetique"></div>
    </div>
  </div>

  <!-- Swiper pour le contenu avec effet slide -->
  <div class="swiper content-swiper">
    <h2 class="fixed-title text-center text-2xl font-bold font-bestley text-white z-10 px-10 md:text-4xl md:pt-10">
        Des formations diverses et variées
    </h2>
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="content px-10 pt-14">
          <h3 class="text-white text-center text-xl font-bold font-bestley pb-3 md:text-2xl">Coiffure</h3>
          <p class="text-white text-center text-sm md:text-base md:px-80">Techniques de coupe, colorimétrie, coiffures tendances… Nos programmes sur-mesure s'adaptent à tous les niveaux, de débutant à professionnel.</p>
          <button class="btn btn-primary mt-6 rounded-tr-lg rounded-bl-lg px-8 bg-white text-black border-none hover:bg-black hover:text-white">Découvrir</button>
        </div>
      </div>
      <div class="swiper-slide">
        <div class="content px-10 pt-14">
          <h3 class="text-white text-center text-xl font-bold font-bestley pb-3 md:text-2xl">Esthétique</h3>
          <p class="text-white text-center text-sm md:text-base md:px-80">Perfectionnez votre savoir-faire avec nos formations certifiées en esthétique. Soins du visage, maquillage professionnel, manucure… Nos programmes sur-mesure vous forment aux techniques essentielles pour réussir dans l'univers de la beauté.</p>
          <button class="btn btn-primary mt-6 rounded-tr-lg rounded-bl-lg px-8 bg-white text-black border-none hover:bg-black hover:text-white">Découvrir</button>
        </div>
      </div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

<style>
  .carousel-container {
    position: relative;
  }

  .bg-swiper, .content-swiper {
    position: absolute;
    top: 0;
    left: 0;
  }

  .bg-swiper {
    z-index: 1;
  }

  .content-swiper {
    z-index: 2;
    background: transparent;
  }

  .content-swiper .swiper-slide {
    background: transparent;
  }

  .swiper-button-next, .swiper-button-prev {
    color: white;
    transform: scale(0.7);
  }

  .swiper-button-next:after, .swiper-button-prev:after {
    font-size: 1.5rem;
  }

  @media (min-width: 768px) {
    .swiper-button-prev {
      left: 18rem;
      top: 13rem;
    }

    .swiper-button-next {
      right: 18rem;
      top: 13rem;
    }

    .swiper-button-next:hover, .swiper-button-prev:hover {
      transform: scale(1);
      transition: all 0.3s ease;
    }
  }
  .carousel-container {
    height: 80%;
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (min-width: 768px) {
    .carousel-container {
      height: 45%;
    }
  }

  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
  }

  .bg-coiffure {
    background-image: url('/src/assets/carrousel/slider-1.png');
    background-size: cover;
    background-position: center;
  }

  .bg-esthetique {
    background-image: url('/src/assets/carrousel/slider-2.png');
    background-size: cover;
    background-position: center;
  }

  /* Modification de l'effet de fondu */
  .swiper-slide-active {
    opacity: 1;
  }

  .swiper-slide:not(.swiper-slide-active) {
    opacity: 0;
  }

  .bg-swiper .swiper-wrapper {
    background-color: #121212; /* Fond noir derrière les slides */
  }

  .fixed-title {
    position: absolute;
    top: 2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    pointer-events: none;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, EffectFade } from 'swiper/modules';

  // Swiper pour les backgrounds
  const bgSwiper = new Swiper('.bg-swiper', {
    modules: [EffectFade],
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    allowTouchMove: false,
    loop: true,
  });

  // Swiper pour le contenu
  const contentSwiper = new Swiper('.content-swiper', {
    modules: [Navigation, Pagination],
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    pagination: {
      el: '.swiper-pagination',
    },
    loop: true,
    // Synchronise le background avec le contenu
    on: {
      slideChange: function (swiper) {
        bgSwiper.slideToLoop(swiper.realIndex);
      }
    }
  });
</script>