---
interface Props {
  filePath: string;
  fileName: string;
  label?: string;
  class?: string;
}

const { filePath, fileName, label = "Télécharger la brochure"} = Astro.props;
---
<div class="flex justify-center gap-4 mt-6 md:mt-10">
  <button class="btn-rdv font-montserrat font-semibold rounded-bl-xl rounded-tr-xl text-sm relative overflow-hidden transition-all duration-300 py-3 md:px-4">
    <a href="/#contact" class="relative z-10">Prendre <span class="text-nowrap">rendez-vous</span></a>
    <div class="glow-effect"></div>
  </button>
  <button
    onclick={`window.open('${filePath}', '_blank')`}
    class="btn-download w-1/2 inline-flex items-center text-sm px-2 py-3 border font-montserrat font-semibold rounded-bl-xl rounded-tr-xl transition-all md:w-fit md:px-4 md:gap-2"
    aria-label={`Télécharger ${fileName}`}
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    {label}
    <div class="glow-effect"></div>
  </button>
</div>

<style>
  /* Style de base pour les deux boutons */
  .btn-rdv, .btn-download {
    position: relative;
    isolation: isolate;
    border: 1px solid;
    overflow: visible;
    z-index: 1;
  }
  
  .btn-rdv {
    background-color: white;
    color: black;
  }
  
  .btn-download {
    background-color: transparent;
    color: white;
  }
  
  /* Élément qui contient l'effet de lueur */
  .glow-effect {
    position: absolute;
    inset: 0;
    z-index: -1;
    border-top-right-radius: 10px;
    border-bottom-left-radius: 10px;
    opacity: 0;
    background: linear-gradient(
      45deg,
      #4158D0 0%,
      #C751C0 50%,
      #FFCB70 100%
    );
    transition: opacity 0.3s ease;
  }
  
  /* Effet au survol pour les deux boutons */
  .btn-rdv:hover, .btn-download:hover {
    border-color: transparent;
    color: white;
  }
  
  .btn-rdv:hover .glow-effect, .btn-download:hover .glow-effect {
    opacity: 1;
    animation: glowPulse 2s infinite;
  }
  
  /* Animation de pulsation pour l'effet lumineux */
  @keyframes glowPulse {
    0% {
      box-shadow: 0 0 5px rgba(65, 88, 208, 0.5), 0 0 10px rgba(199, 81, 192, 0.5);
    }
    50% {
      box-shadow: 0 0 20px rgba(65, 88, 208, 0.7), 0 0 30px rgba(199, 81, 192, 0.7), 0 0 40px rgba(255, 203, 112, 0.7);
    }
    100% {
      box-shadow: 0 0 5px rgba(65, 88, 208, 0.5), 0 0 10px rgba(199, 81, 192, 0.5);
    }
  }
</style>